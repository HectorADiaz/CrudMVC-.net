@model List<MVCCRUD.Models.TableViewModels.UserTableViewModel>
 


@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>

<div class="row">
    <div class="col-lg-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href = '@Url.Content("~/User/Add")'" value="Nuevo" />
    </div>
</div>

<br>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Edad</th>
                <th></th>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.idUsuario</td>
                    <td>@oElemento.correo</td>
                    <td>@oElemento.edad</td>
                    <td>
                        <input onclick="jsDelete(@oElemento.idUsuario);" type="button" value="Eliminar" class="btn btn-danger" />
                        <input type="button" class="btn btn-success" onclick="document.location.href='@Url.Content("~/User/Edit/" + oElemento.idUsuario)'" value="Editar" />

                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(id) {
        if (confirm("Estas segurisisisisisisisisimo de eliminarlo?")) {
            url = "@Url.Content("~/User/Delete")" + "/"+id;

            $.post(url, function (data) {

                if (data == "1") {
                    document.location.href = "@Url.Content("~/User/")"
                } else {
                    alert("Ocurrio un error :(")
                }

            })
        }
    }
</script>


